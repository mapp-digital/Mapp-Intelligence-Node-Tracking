<% if (cart.length > 0) { %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Remove</th>
                <th>Image</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% var total = 0 %>
            <% for (var i = 0, l = cart.length, item; i < l; i++) { %>
                <% item = cart[i] %>
                <% total = total + item.product.price * item.quantity %>

                <tr>
                    <td><input type="checkbox" value="<%= item.product.id %>" id="remove"></td>
                    <td><a href="product_detail/<%= item.product.sku %>"><img alt="" src="<%= item.product.url %>"></a></td>
                    <td><%= item.product.name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= item.product.price %>€</td>
                    <td><%= item.product.price * item.quantity %>€</td>
                </tr>
            <% } %>
        <tr>
            <td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td>
            <td><strong><%= total %>€</strong></td>
        </tr>
        </tbody>
    </table>
<% } else { %>
    <h5 class="center">You have no items in your shopping cart.</h5>
    <ul class="center" style="list-style: none;">
        <li><i>Click <a href=""><u>here</u></a> to continue shopping.</i></li>
    </ul>
<% } %>